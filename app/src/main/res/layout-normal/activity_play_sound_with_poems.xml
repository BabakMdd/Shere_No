<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_sound_with_poems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ashaar"
    tools:context="shereno.andishesaz.com.shere_nov1.PlaySoundWithPoems">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
        android:id="@+id/soundtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaaaaa"
            android:layout_below="@+id/seek"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/toast"/>

        <TextView
            android:id="@+id/totaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaa"
            android:layout_below="@+id/seek"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/toast"/>

        <Button
            android:id="@+id/play"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/play_button_shape"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/seek"/>

        <SeekBar
            android:id="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/nextSound"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/play_button_shape"
            android:layout_below="@+id/seek"
            android:layout_toLeftOf="@+id/totaltime"
            android:layout_toStartOf="@+id/totaltime"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" />

        <Button
            android:id="@+id/prevSound"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/play_button_shape"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/seek"
            android:layout_toRightOf="@+id/soundtime"
            android:layout_toEndOf="@+id/soundtime" />

    </RelativeLayout>

    <ListView
        android:id="@+id/soundlist"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_above="@+id/top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

</RelativeLayout>
