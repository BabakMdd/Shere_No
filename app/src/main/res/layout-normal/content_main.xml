<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/homeback"
    tools:context="shereno.andishesaz.com.shere_nov1.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <Button
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_fifth_selector"
        android:layout_below="@+id/setting"
        android:layout_alignRight="@+id/Poems"
        android:layout_alignEnd="@+id/Poems" />

    <Button
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_third_selector"
        android:layout_below="@+id/deklame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_forth_selector"
        android:layout_below="@+id/bio"
        android:layout_alignLeft="@+id/deklame"
        android:layout_alignStart="@+id/deklame" />

    <Button
        android:id="@+id/setting"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/homepage_sixth_selector"
        android:layout_below="@+id/favorite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></Button>

    <Button
        android:id="@+id/deklame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_second_selector"
        android:layout_below="@+id/Poems"
        android:layout_alignRight="@+id/bio"
        android:layout_alignEnd="@+id/bio" />

    <Button
        android:id="@+id/Poems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/homepage_first_selector"
        android:layout_marginTop="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
