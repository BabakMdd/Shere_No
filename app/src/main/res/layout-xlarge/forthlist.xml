<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/forthpage">

    <ImageButton
        android:id="@+id/forthbook"
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:src="@drawable/zibayejavdane"
        android:onClick="zibayejavdane"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/firstbook"
        android:layout_toStartOf="@+id/firstbook" />

    <ImageButton
        android:id="@+id/secondbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/azkhamooshi"
        android:layout_marginLeft="118dp"
        android:layout_marginStart="118dp"
        android:onClick="azkhamooshi"
        android:layout_above="@+id/forthbook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/firstbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/avazanparandeghamgin"
        android:onClick="avazanparandeghamgin"
        android:layout_above="@+id/thirdbook"
        android:layout_toRightOf="@+id/secondbook"
        android:layout_toEndOf="@+id/secondbook" />

    <ImageButton
        android:id="@+id/thirdbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delaviztarin"
        android:onClick="delavviztarin"
        android:layout_alignBottom="@+id/forthbook"
        android:layout_toRightOf="@+id/forthbook"
        android:layout_toEndOf="@+id/forthbook" />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginBottom="115dp"
        android:onClick="BackToPage"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/forthbook"
        android:layout_alignStart="@+id/forthbook" />

</RelativeLayout>