<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_of_poems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/copyasar1"
    tools:context="shereno.andishesaz.com.shere_nov1.ListOfPoems">


    <ImageButton
        android:id="@+id/forthbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/panjsokhansara"
        android:layout_below="@+id/secondbook"
        android:layout_alignLeft="@+id/secondbook"
        android:layout_alignStart="@+id/secondbook"
        android:onClick="bapanjsokhansara"/>

    <ImageButton
        android:id="@+id/firstbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abrokooche"
        android:layout_marginTop="189dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/secondbook"
        android:layout_toEndOf="@+id/secondbook"
        android:onClick="abrokoocheh"/>

    <ImageButton
        android:id="@+id/secondbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ahbaran"
        android:onClick="AhBaran"
        android:layout_marginTop="76dp"
        android:layout_alignTop="@+id/firstbook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <ImageButton
        android:id="@+id/thirdbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/diareashti"
        android:layout_below="@+id/firstbook"
        android:layout_toRightOf="@+id/forthbook"
        android:layout_toEndOf="@+id/forthbook"
        android:onClick="azdiarAshti"/>

    <Button
        android:id="@+id/btnnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/next1"
        android:onClick="SecondPage"
        android:layout_marginLeft="101dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="99dp"
        android:layout_below="@+id/forthbook"
        android:layout_toRightOf="@+id/thirdbook"
        android:layout_toEndOf="@+id/thirdbook" />
</RelativeLayout>