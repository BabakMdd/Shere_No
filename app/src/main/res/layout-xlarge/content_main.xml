<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/homeback"
    tools:context="shereno.andishesaz.com.shere_nov1.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <Button
        android:id="@+id/bio"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage_third_selector"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/favorite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/deklame"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage_second_selector"
        android:layout_above="@+id/bio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/Poems"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage_first_selector"
        android:layout_above="@+id/deklame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/setting"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage_sixth_selector"
        android:layout_above="@+id/about"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/favorite"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage_forth_selector"
        android:layout_marginBottom="84dp"
        android:layout_alignBottom="@+id/setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/about"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/homepage_fifth_selector"
        android:layout_marginBottom="175dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>
