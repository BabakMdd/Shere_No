<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_sound_with_poems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ashaar"
    tools:context="shereno.andishesaz.com.shere_nov1.PlaySoundWithPoems">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <SeekBar
            android:id="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/prevSound"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="26dp" />

        <Button
            android:id="@+id/nextSound"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/play_button_shape"
            android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/play"
            android:layout_toEndOf="@+id/play" />

        <Button
            android:id="@+id/prevSound"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/play_button_shape"
            android:layout_marginRight="72dp"
            android:layout_marginEnd="72dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/play"
            android:layout_toStartOf="@+id/play" />

        <Button
            android:id="@+id/play"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/play_button_shape"
            android:layout_below="@+id/seek"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/soundtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaa"
            android:textSize="24dp"
            android:textColor="@color/toast"
            android:layout_above="@+id/prevSound"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/totaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaa"
            android:textSize="24dp"
            android:textColor="@color/toast"
            android:layout_above="@+id/nextSound"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"></LinearLayout>
    <ListView
        android:id="@+id/soundlist"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_above="@+id/top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/space"/>

</RelativeLayout>
