<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_poems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/ashaar"
    tools:context="shereno.andishesaz.com.shere_nov1.ShowPoems">

    <LinearLayout
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical">
    </LinearLayout>

    <ListView
        android:id="@+id/PoemsShowList"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:choiceMode="singleChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="@null"
        style="@style/AppTheme.poemsList"
        android:layout_below="@+id/space"></ListView>


    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/next"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:background="@drawable/next"
            android:text="@string/next"
            android:textColor="@color/toast"
            android:layout_marginLeft="111dp"
            android:layout_marginStart="111dp"
            android:layout_alignBaseline="@+id/prev"
            android:layout_alignBottom="@+id/prev"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/prev"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="@string/prev"
            android:background="@drawable/next"
            android:textColor="@color/toast"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/next"
            android:layout_toEndOf="@+id/next"
            android:layout_marginLeft="97dp"
            android:layout_marginStart="97dp"
            android:textSize="20dp"/>

    </RelativeLayout>

</RelativeLayout>
